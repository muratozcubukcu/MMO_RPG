# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ai_mmo

# Redis
REDIS_URL=redis://localhost:6379

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# CORS Configuration
CORS_ORIGINS=http://localhost:3001,http://localhost:3000

# AI Services
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL_INTERPRETER=llama3:8b-instruct
OLLAMA_MODEL_NARRATOR=llama3:8b-instruct

# Object Storage (MinIO)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET=world-content
MINIO_USE_SSL=false

# Service URLs (for inter-service communication)
GAME_SERVICE_URL=http://localhost:3002
WORLDGEN_SERVICE_URL=http://localhost:3003
MARKET_SERVICE_URL=http://localhost:3004
SOCIAL_SERVICE_URL=http://localhost:3005
INTERPRETER_SERVICE_URL=http://localhost:3006
NARRATOR_SERVICE_URL=http://localhost:3007
NOTIFIER_SERVICE_URL=http://localhost:3008

# Service Ports
GATEWAY_PORT=3000
GAME_SERVICE_PORT=3002
WORLDGEN_SERVICE_PORT=3003
MARKET_SERVICE_PORT=3004
SOCIAL_SERVICE_PORT=3005
INTERPRETER_SERVICE_PORT=3006
NARRATOR_SERVICE_PORT=3007
NOTIFIER_SERVICE_PORT=3008

# Environment
NODE_ENV=development

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Content Moderation
ENABLE_CONTENT_MODERATION=true
PROFANITY_FILTER_ENABLED=true

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Monitoring
METRICS_ENABLED=true
TRACING_ENABLED=true