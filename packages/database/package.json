{
  "name": "@ai-mmo/database",
  "version": "1.0.0",
  "description": "Database schema and client for AI MMO",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:reset": "prisma migrate reset",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "@ai-mmo/shared-types": "workspace:*"
  },
  "devDependencies": {
    "prisma": "^5.7.1",
    "typescript": "^5.3.0",
    "tsx": "^4.6.0"
  }
}